        "            input_sentence = normalizeString(input_sentence)\n",
        "            output_words = predict(input_sentence, model, libra, embedding_size)\n",
        "            print('Cleopatra:', ' '.join(output_words))\n",
        "        except KeyError:\n",
        "            print(\"Error: Encountered unknown word.\")"
